{% if admin.hasroute('show') and admin.id(object) and admin.isGranted('VIEW', object) and admin.show|length > 0 %}
    <a class="sonata-action-element" href="{{ admin.generateObjectUrl('show', object) }}" title="{{ 'link_action_show'|trans({}, 'SonataAdminBundle') }}">
        <i class="fa fa-eye"></i>
    </a>
{% endif %}